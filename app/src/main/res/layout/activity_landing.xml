<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LandingActivity"
    android:background="#ac0805"
    android:id="@+id/homescreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The Norwich U."
        android:id="@+id/textView2"
        android:layout_marginTop="169dp"
        android:textColor="#c99c05"
        android:textIsSelectable="false"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:typeface="normal"
        android:textStyle="italic"
        android:fontFamily="serif"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vehicle ID App"
        android:id="@+id/textView"
        android:textColor="#c99c05"
        android:textSize="@dimen/abc_text_size_display_2_material"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:typeface="serif"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Start Id > "
        android:id="@+id/startIdBbutton"
        android:typeface="normal"
        android:textColor="#ac0805"
        android:layout_marginTop="206dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_rect_button"
        android:clickable="true"
        android:enabled="true"
        android:textSize="25dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Vote!"
        android:id="@+id/votebutton"
        android:typeface="normal"
        android:textColor="#ac0805"
        android:background="@drawable/rounded_rect_button"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/startIdBbutton"
        android:layout_alignStart="@+id/startIdBbutton"
        android:layout_marginTop="6dp"
        android:textSize="25dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:text="Browse All Vehicles"
        android:id="@+id/browsebutton"
        android:typeface="normal"
        android:textColor="#ac0805"
        android:background="@drawable/rounded_rect_button"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/votebutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:textSize="10dp" />

</RelativeLayout>
