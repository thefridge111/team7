<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LandingActivity"
    android:background="#ac0805"
    android:id="@+id/homescreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/norwich_U"
        android:id="@+id/norwichU"
        android:layout_marginTop="169dp"
        android:textColor="#c99c05"
        android:textIsSelectable="false"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:typeface="normal"
        android:textStyle="italic"
        android:fontFamily="serif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/vicIdAppTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/vic_id_app_txt"
        android:id="@+id/vicIdAppTxt"
        android:textColor="#c99c05"
        android:textSize="@dimen/abc_text_size_display_2_material"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:typeface="serif"
        android:layout_below="@+id/norwichU"
        android:layout_centerHorizontal="true" />

    <!-- Sign In Button -->
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/googsign"
        android:id="@+id/GSignInButton"
        android:typeface="normal"
        android:textColor="#ac0805"
        android:background="@drawable/rounded_rect_button"
        android:clickable="true"
        android:enabled="true"
        android:textSize="25sp"
        android:onClick="goToSignIn"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/norwichU" />


    <!-- Upload Button -->
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/upload"
        android:id="@+id/startIdBbutton"
        android:typeface="normal"
        android:textColor="#ac0805"
        android:background="@drawable/rounded_rect_button"
        android:clickable="true"
        android:enabled="true"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/vicIdAppTxt"
        android:layout_centerHorizontal="true"
        android:onClick="goToUpload"/>

    <!-- Vote Button -->
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/votebutton"
        android:id="@+id/votebutton"
        android:typeface="normal"
        android:textColor="#ac0805"
        android:background="@drawable/rounded_rect_button"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/startIdBbutton"
        android:layout_alignStart="@+id/startIdBbutton"
        android:layout_marginTop="6dp"
        android:textSize="25sp"
        android:onClick="goToVote" />

    <!-- Browse Vics button -->
    <Button
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:text="@string/browsevicsbutton"
        android:id="@+id/browsebutton"
        android:typeface="normal"
        android:textColor="#ac0805"
        android:background="@drawable/rounded_rect_button"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/votebutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:textSize="10sp"
        android:onClick="goToEncyclopedia" />



</RelativeLayout>
