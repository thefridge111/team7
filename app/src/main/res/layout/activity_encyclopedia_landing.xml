<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nuteam7.www.vicidapp.EncyclopediaLanding"
    android:background="#ac0805">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:backgroundTint="#ffbe15"
        android:background="@drawable/rounded_rect_button" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@android:id/list"
        android:layout_weight="1"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true" />


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand Name"
            android:id="@+id/brand_sort"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@android:id/list"
            android:onClick="onRadioButtonClicked" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model Name"
            android:id="@+id/model_sort"
            android:layout_below="@+id/brand_sort"
            android:layout_alignParentEnd="true"
            android:onClick="onRadioButtonClicked" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year"
            android:id="@+id/year_sort"
            android:layout_below="@+id/model_sort"
            android:layout_alignParentEnd="true"
            android:onClick="onRadioButtonClicked" />
    </RadioGroup>

</RelativeLayout>
